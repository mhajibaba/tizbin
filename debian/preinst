#!/bin/sh

set -e

case "$1" in
    install|upgrade)
    
        if [ -f /opt/tizbin/tzb.db ]; then
            if [ -d /opt/tizbin/xi/app/tmp/cache ]; then
                rm -rf /opt/tizbin/xi/app/tmp/cache/models/*
                rm -rf /opt/tizbin/xi/app/tmp/cache/views/*
            fi
            cp /opt/tizbin/tzb.db /opt/tizbin/tzb.db.backup
        fi
        
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
